<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="2026-01-30--0002-meeting.xml" author="kchikrizov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="meeting"/>
            </not>
        </preConditions>
        <createTable tableName="meeting">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="start" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="duration" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="place" type="VARCHAR(80)">
                <constraints nullable="false"/>
            </column>
            <column name="theme" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR">
                <constraints nullable="true"/>
            </column>
            <column name="creator" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_user_meeting_creator"
                             referencedTableName="users"
                             referencedColumnNames="id"/>
            </column>

        </createTable>
    </changeSet>
</databaseChangeLog>
