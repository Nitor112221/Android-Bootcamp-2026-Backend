<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="2026-02-03--0007-users-authority.xml" author="kchikrizov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="users_authority"/>
            </not>
        </preConditions>
        <createTable tableName="users_authority">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="BIGINT" autoIncrement="true">
                <constraints foreignKeyName="fk_user_authority_user" referencedColumnNames="id" referencedTableName="users" nullable="false"/>
            </column>

            <column name="authority_id" type="BIGINT" autoIncrement="true">
                <constraints foreignKeyName="fk_user_authority_authority" referencedColumnNames="id" referencedTableName="authority" nullable="false"/>
            </column>

        </createTable>
    </changeSet>
</databaseChangeLog>
