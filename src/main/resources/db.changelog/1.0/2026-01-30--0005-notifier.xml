<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="2026-01-30--0005-notifier.xml" author="kchikrizov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="notifier"/>
            </not>
        </preConditions>
        <createTable tableName="notifier">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="addressee" type="BIGINT">
                <constraints nullable="false" foreignKeyName="addressee_notifier_users"
                             referencedTableName="users"
                             referencedColumnNames="id"/>
            </column>
            <column name="meeting" type="BIGINT">
                <constraints nullable="false" foreignKeyName="meeting_notifier_meeting"
                             referencedTableName="meeting"
                             referencedColumnNames="id"/>
            </column>
            <column name="text" type="VARCHAR">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>
</databaseChangeLog>
